
# Базовые
TZ=Europe/Moscow
PORT=8989

# Индексация / чанки
CHUNK_SIZE=600
CHUNK_OVERLAP_SIZE=120
USE_LLM_FALLBACK=false
MAX_ASYNC_LLM=1

# Embeddings через Polza (мультиязычные, лучше для RU)
EMBEDDING_BINDING=openai
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_BINDING_HOST=https://api.polza.ai/api/v1
EMBEDDING_DIM=3072

# Разнести индекс под новую размерность
WORKSPACE=emb-polza-te3-large-3072

# LLM для ответов (Polza OpenAI-совместимый API)
LLM_BINDING=openai
LLM_MODEL=openai/gpt-3.5-turbo
OPENAI_BASE_URL=https://api.polza.ai/api/v1
LLM_BINDING_HOST=https://api.polza.ai/api/v1
OPENAI_API_KEY=

# Русский язык для суммаризаций/ответов
SUMMARY_LANGUAGE=Russian

# Реранкер (опционально, но полезно для RU)
ENABLE_RERANK=false
# RERANK_BINDING=huggingface
# RERANK_MODEL=BAAI/bge-reranker-v2-m3
# MIN_RERANK_SCORE=0.1

# API Key Header auth
API_KEY_HEADER=X-API-Key
LIGHTRAG_API_KEY=

# WebUI Basic Auth (по желанию)
AUTH_ACCOUNTS=master:simsim56HR
TOKEN_SECRET=
TOKEN_EXPIRE_HOURS=24

# Ollama (если где-то используешь)
OLLAMA_TIMEOUT_SECONDS=60
OLLAMA_RETRIES=3